<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:gravity="center"
        android:textSize="@dimen/size20sp"
        android:paddingTop="@dimen/size10dp"
        android:textColor="@color/colorYellow"
        android:background="@color/colorTeal"
        android:paddingBottom="@dimen/size5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginRight="@dimen/size5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:layout_marginRight="@dimen/size30dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtName"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginRight="@dimen/size5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CMND"
            android:layout_marginRight="@dimen/size30dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/edtIdentityCard"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCyan"
        android:text="Bằng cấp"
        android:gravity="center"
        android:textColor="@color/colorYellow"
        android:paddingTop="@dimen/size10dp"
        android:paddingBottom="@dimen/size5dp"
        android:textStyle="bold"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/size5dp"
        android:id="@+id/rgCertificate">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung cấp"
            android:layout_marginRight="@dimen/size20sp"
            android:id="@+id/rbIntermediate"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao đẳng"
            android:layout_marginRight="@dimen/size20sp"
            android:id="@+id/rbCollege"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đại học"
            android:id="@+id/rbUniversity"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCyan"
        android:text="Sở thích"
        android:gravity="center"
        android:textColor="@color/colorYellow"
        android:paddingTop="@dimen/size10dp"
        android:paddingBottom="@dimen/size5dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/size5dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc sách"
            android:layout_marginRight="@dimen/size20sp"
            android:id="@+id/rbBook"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem phim"
            android:layout_marginRight="@dimen/size20sp"
            android:id="@+id/rbFilm"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chơi game"
            android:id="@+id/rbGame"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:text="Thông tin bổ sung"
        android:gravity="center"
        android:textColor="@color/colorYellow"
        android:paddingTop="@dimen/size10dp"
        android:paddingBottom="@dimen/size5dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size50dp"
        android:id="@+id/edtMoreInformation"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi thông tin"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:id="@+id/btnSend"/>
</LinearLayout>
